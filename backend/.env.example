# Application
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Authentication
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Database
# This should be your full MongoDB Atlas connection string.
# Full MongoDB Atlas connection string. IMPORTANT: Include your database name after the cluster URL.
# Example: mongodb+srv://myuser:mypassword@mycluster.mongodb.net/tile_matcher_db?retryWrites=true&w=majority
MONGO_URI="mongodb+srv://<user>:<password>@<cluster-url>/<database_name>?retryWrites=true&w=majority"

# File Storage
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16MB
ALLOWED_EXTENSIONS={'png', 'jpg', 'jpeg', 'gif'}
